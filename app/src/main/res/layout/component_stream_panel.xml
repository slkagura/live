<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <import type="android.view.View" />
        <variable
            name="vm"
            type="xyz.slkagura.ui.component.StreamPanel"
            />
        <variable
            name="handler"
            type="xyz.slkagura.ui.component.StreamPanel.IHandler"
            />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        >
        <FrameLayout
            android:id="@+id/component_stream_fl_stream"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/component_stream_btn_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/component_stream_btn_settings"
            android:elevation="1dp"
            android:onClick="@{() -> vm.onSettingsClick()}"
            android:src="@drawable/svg_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/component_stream_cl_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/drawable_bg_white_radius_4"
            android:elevation="1dp"
            android:padding="8dp"
            android:visibility="@{vm.mSettingsVisible ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="@id/component_stream_btn_settings"
            app:layout_constraintTop_toBottomOf="@id/component_stream_btn_settings"
            >
            <RadioGroup
                android:id="@+id/component_stream_cl_settings_rg_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@={vm.mCheckedIndex}"
                android:orientation="horizontal"
                android:text="Input 1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/component_stream_cl_settings_rg_input_rb_1"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Input 1"
                    android:textColor="@color/black"
                    />
                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/component_stream_cl_settings_rg_input_rb_2"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginStart="4dp"
                    android:text="Input 2"
                    android:textColor="@color/black"
                    />
            </RadioGroup>
            <View
                android:id="@+id/component_stream_cl_settings_view_divider_1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/component_stream_cl_settings_rg_input"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/component_stream_cl_settings_btn_command"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:onClick="@{() -> handler.onCommandClick()}"
                android:text="Command"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/component_stream_cl_settings_view_divider_1"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>